{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    // "**/build": true,
    "**/Cache": true,
  },
  "files.autoSave": "onFocusChange",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.renderIndentGuides": "always",
  "editor.fontFamily": "'Maple Mono NF CN', 'Fira Code', 'Courier New',  'JetBrains Mono Light','Source Code Pro','CommitMono Nerd Font Mono', monospace",
  "editor.fontWeight": "200",
  "editor.lineHeight": 1.7,
  "editor.wordWrap": "on",
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.guides.indentation": true,
  "editor.fontSize": 15,
  "editor.links": false,
  "editor.inlayHints.enabled": "off",
  "editor.stickyScroll.enabled": true,
  "terminal.integrated.fontFamily": "'monaco','CommitMono Nerd Font Mono', Fira Code",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.cursorBlinking": true,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": true,
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "explorer.confirmDragAndDrop": false,
  "editor.minimap.showSlider": "always",
  "editor.largeFileOptimizations": false,
  "editor.minimap.renderCharacters": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "window.commandCenter": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "debug.javascript.autoAttachFilter": "disabled",
  "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
  "editor.minimap.enabled": true,
  // CMake settings
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.options.statusBarVisibility": "visible",
  "cmake.configureOnEdit": true,
  "cmake.showConfigureWithDebuggerNotification": false,
  "cmake.outputLogEncoding": "utf-8",
  "cmake.debugConfig": {
    "console": "externalTerminal"
  },
  "debug.internalConsoleOptions": "neverOpen",
  "cmake.revealLog": "focus",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.suggestSmartCommit": false,
  "[glsl]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "search.exclude": {
    ".git": true,
    ".vs": true,
    "docs/": true,
    "drivers/": true,
    "scripts/": true,
    ".clang-format*": true,
    ".cppcheck-ignore": true,
    ".clangd": true,
    "vsxmake2022": true,
    "imgui.ini": true,
    "build": true,
    ".xmake": true,
    ".cache": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/target": true,
    "**/logs": true
  },
  // "files.exclude": {
  //   ".git": true,
  //   ".vs": true,
  //   "docs/": true,
  //   "drivers/": true,
  //   "scripts/": true,
  //   ".clang-format*": true,
  //   ".cppcheck-ignore": true,
  //   ".clangd": true,
  //   "vsxmake2022": true,
  //   "imgui.ini": true,
  //   "build": true,
  //   ".xmake": true,
  //   ".cache": true,
  //   "trash": false
  // },
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.enabled": true,
  "gitlens.codeLens.enabled": false,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.layoutControl.enabled": false,
  "github.copilot.advanced": {
    "authProvider": "github"
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.selectedCompletionModel": "",
  "debug.console.fontFamily": "Fira Code",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "typescript": true
  },
  "git.ignoreRebaseWarning": true,
  "workbench.activityBar.location": "top",
  "window.zoomLevel": 0,
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "windowed",
  "augment.chat.userGuidelines": "",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
